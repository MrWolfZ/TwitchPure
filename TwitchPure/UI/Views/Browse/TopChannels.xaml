<Page x:Class="TwitchPure.UI.Views.Browse.TopChannels"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:prismMvvm="using:Prism.Windows.Mvvm"
      xmlns:viewModels="using:TwitchPure.UI.ViewModels.Browse"
      xmlns:controls="using:TwitchPure.UI.Controls"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewModels:TopChannelsViewModel}"
      prismMvvm:ViewModelLocator.AutoWireViewModel="True">

  <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <controls:Shell>
      <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
      <Grid DataContext="{Binding NestedDataContext}">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Uid="TopChannels_Header" Margin="12,12,0,0" Style="{StaticResource BaseTextBlockStyle}" />

        <controls:StreamList Grid.Row="1" DataContext="{Binding StreamListViewModel}" />
      </Grid>
    </controls:Shell>
  </Grid>
</Page>